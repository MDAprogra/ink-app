generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Catalogue {
  id  Int @id @default(autoincrement())
  nom String
  description String?
  referenceInterfas    String?  @unique @map("reference_interfas")
  referenceFournisseur String   @map("reference_fournisseur")
  fournisseur String
  type String?
  stockSecurite        Decimal  @default(0) @map("stock_securite") 
  dateCreation         DateTime @default(now()) @map("date_creation")
  dureeConservation Int? @map("duree_conservation")
  couleur String?
  actif Boolean @default(true)
  uniteGestion String?
  stocks Stock[]

  @@map("catalogue")
}

model Stock {
  id Int @id @default(autoincrement())
  quantite Decimal @db.Decimal(10, 3)
  dateReapprovisionnement DateTime @map("date_reapprovisionnement")
  idCatalogue Int @map("id_catalogue")
  catalogue Catalogue @relation(fields: [idCatalogue], references: [id], onDelete: Cascade)
  mouvements Mouvement[]

  @@map("stock")
}

model Mouvement{
  id Int @id @default(autoincrement())
  type String
  quantite Decimal @db.Decimal(10, 3)
  date DateTime @default(now())
  idStock Int @map("id_stock")
  idUser Int @map("id_user")
  stock Stock @relation(fields: [idStock], references: [id], onDelete: Cascade)
  user User @relation(fields: [idUser], references: [id], onDelete: Cascade)

  @@map("mouvement")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?   @unique
  password  String   // Le mot de passe sera hashé (crypté)
  name      String? @unique
  role      String
  createdAt DateTime @default(now())
  lastConnect DateTime?
  mouvements Mouvement[]

  @@map("user")
}